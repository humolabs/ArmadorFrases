<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Sin la Barra de Titulo - Heredando de AppCompat -->
    <style name="Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Poner en AndroidManifest.xml
            android:theme="@style/Theme.NoActionBar"
        -->
    </style>

    <!-- Sin la Barra de Titulo -->
    <style name="Theme.NoTitle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
